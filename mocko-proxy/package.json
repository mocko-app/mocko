{
  "name": "@mocko/proxy",
  "version": "1.7.2",
  "description": "Mocko proxy service, serves mocks or proxies requests to your endpoint when no mock is defined.",
  "main": "dist/main",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node --expose-gc dist/main",
    "start:dev": "nodemon --config nodemon.json",
    "start:prod": "node --expose-gc dist/main",
    "pretest": "tsc",
    "pretest:cov": "tsc",
    "test": "lab -I require -a @hapi/code",
    "test:cov": "lab -a @hapi/code -r html -o coverage.html",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mocko-app/mocko.git"
  },
  "author": "Gabriel Pinheiro <gabrielctpinheiro@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mocko-app/mocko/issues"
  },
  "homepage": "https://github.com/mocko-app/mocko#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.3",
    "@hapi/hoek": "^9.1.1",
    "@mocko/h2o2": "^9.0.3",
    "@mocko/helpers": "^1.1.3",
    "@mocko/logger": "^1.1.4",
    "@mocko/resync": "^1.1.1",
    "@mocko/sync": "^0.1.1",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "handlebars": "^4.7.6",
    "hcl-parser": "^0.1.1",
    "inversify": "^5.0.5",
    "ioredis": "^4.19.4",
    "joi": "^17.3.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^24.1.0",
    "@types/dotenv": "^8.2.0",
    "@types/handlebars": "^4.1.0",
    "@types/hapi": "^18.0.4",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__h2o2": "^8.3.2",
    "@types/hapi__hapi": "^20.0.3",
    "@types/ioredis": "^4.17.10",
    "@types/node": "^14.14.19",
    "@types/uuid": "^8.3.0",
    "axios": "^0.21.1",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
